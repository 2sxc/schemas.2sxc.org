{
  "$id": "https://schemas.2sxc.org/app/v17/copilot.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Developer Copilot",
  "type": "object",

  "properties": {
    "generateModels": {
      "type": "object",
      "description": "Configurations to generate Models",
      "properties": {
        "default": {
          "type": "object",
          "description": "Default configuration for generating Models",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable/Disable the generation of Models. Default is always true."
            },
            "namespace": {
              "type": "string",
              "description": "The namespace of the generated Models. Default is 'AppCode.Data'.",
              "default": "AppCode.Data"
            },
            "baseType": {
              "type": "string",
              "description": "The base type of the generated Models"
            },
            "usings": {
              "type": "array",
              "description": "Additional usings in the the generated Models files",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}