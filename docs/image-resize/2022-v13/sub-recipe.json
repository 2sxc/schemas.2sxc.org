{
  "$id": "https://example.com/person.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Recipe",
  "type": "object",
  "anyOf": [
    {
      "$ref": "./recipe-base.json"
    }
  ],
  "properties": {
    "forCss": {
      "type": "string",
      "description": "...",
      "default": "bs5"
    },
    "forFactor": {
      "type": "string",
      "pattern": "^[0-9/:\\.]+$"
    },
    "forTag": {
      "type": "string",
      "description": "restricts this recipe to be used on a specific tag",
      "pattern": "^(img|source)$",
      "default": "img"
    },
    "width": {
      "type": "number"
    }
  },
  "unevaluatedProperties": false
}